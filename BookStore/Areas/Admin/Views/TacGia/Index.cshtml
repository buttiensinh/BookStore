@model IEnumerable<BookStore.Models.TacGia>

@{
    ViewData["Title"] = "Tác Giả";
}

<div class="card">
<h5 class="card-header">@ViewData["Title"]</h5>
<div class="card-body">
    <p><a asp-action="Create" class="btn btn-success"><i class="fa-light fa-plus"></i> Thêm mới</a></p>
    <table class="table table-sm table-hover table-striped table-bordered mb-0">
        <thead>
            <tr>
                <th width="5%">#</th>
                <th @Html.DisplayNameFor(model => model.TenTacGia)> Tên tác giả </th>
                <th @Html.DisplayNameFor(model => model.DienThoai)> Điện thoại </th>
                <th @Html.DisplayNameFor(model => model.DiaChi)> Địa chỉ </th>
                <th @Html.DisplayNameFor(model => model.TieuSu)> Tiểu sử </th>
                <th width="5%">Sửa</th>
                <th width="5%">Xóa</th>
            </tr>
        </thead>
        <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.TenTacGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td>@Html.DisplayFor(modelItem => item.TieuSu)</td>
                    <td class="text-center"><a asp-action="Edit" asp-route-id="@item.ID"><i class="fa-light fa-pen-to-square"></a></td>
                    <td class="text-center"><a asp-action="Delete" asp-route-id="@item.ID"><i class="fa-light fa-trash-can text-danger"></a></td>
                </tr>
                    stt++;
                }
        </tbody>
    </table>
</div>
</div>