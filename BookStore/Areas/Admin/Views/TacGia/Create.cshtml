@model BookStore.Models.TacGia

@{
    ViewData["Title"] = "Thêm Tác Giả";
}

<div class="card">
<h5 class="card-header">@ViewData["Title"]</h5>
<div class="card-body">
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="TenTacGia" class="control-label"> Tên tác giả </label>
                <input asp-for="TenTacGia" class="form-control" />
                <span asp-validation-for="TenTacGia" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DienThoai" class="control-label"> Điện thoại </label>
            <input asp-for="DienThoai" class="form-control" />
            <span asp-validation-for="DienThoai" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiaChi" class="control-label"> Địa chỉ </label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TieuSu" class="control-label"> Tiểu sử </label>
                <input asp-for="TieuSu" class="form-control" />
                <span asp-validation-for="TieuSu" class="text-danger"></span>
        </div>  
        <div class="mb-0">
            <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Thêm mới</button> hoặc <a asp-action="Index">Quay về danh sách</a>
        </div>
    </form>
</div>
</div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }