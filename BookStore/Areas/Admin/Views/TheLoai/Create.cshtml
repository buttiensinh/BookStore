@model BookStore.Models.TheLoai

@{
    ViewData["Title"] = "Thêm Thể Loại";
}

<div class="card">
<h5 class="card-header">@ViewData["Title"]</h5>
<div class="card-body">
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="TenTheLoai" class="control-label"> Tên thể loại </label>
            <input asp-for="TenTheLoai" class="form-control" />
            <span asp-validation-for="TenTheLoai" class="text-danger"></span>
        </div>
        <div class="mb-0">
            <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Thêm mới</button> hoặc <a asp-action="Index">Quay về danh sách</a>
        </div>
    </form>
</div>
</div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
