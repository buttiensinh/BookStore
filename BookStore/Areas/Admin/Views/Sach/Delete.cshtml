@model BookStore.Models.Sach

@{
	ViewData["Title"] = "Xóa sách";
}

<div class="card">
<h5 class="card-header">@ViewData["Title"]</h5>
<div class="card-body">
	<form asp-action="Delete">
		<input type="hidden" asp-for="ID" />
		<div class="alert alert-danger" role="alert">
			<i class="fa-light fa-triangle-exclamation"></i> Bạn có muốn xóa sản phẩm <strong>@Model.TenSach</strong> không?
		</div>
		<div class="mb-0">
			<button type="submit" class="btn btn-primary"><i class="fa-light fa-circle-check"></i> Xác nhận xóa</button> hoặc <a asp-action="Index">Quay về danh sách</a>
		</div>
	</form>
</div>
</div>