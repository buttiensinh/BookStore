@model IEnumerable<BookStore.Models.DonHang>

@{
    ViewData["Title"] = "Đơn Hàng";
}

<div class="card">
<h5 class="card-header">@ViewData["Title"]</h5>
<div class="card-body">
    <p><a asp-action="Create" class="btn btn-success"><i class="fa-light fa-plus"></i> Thêm mới </a></p>
    <table class="table table-sm table-hover table-striped table-bordered mb-0">
        <thead>
            <tr>
                <th width="5%">#</th>
                <th @Html.DisplayNameFor(model => model.NguoiDung)> Người dùng </th>
                <th @Html.DisplayNameFor(model => model.DienThoaiGiaoHang)> Điện thoại giao hàng </th>
                <th @Html.DisplayNameFor(model => model.DiaChiGiaoHang)> Địa chỉ giao hàng </th>
                <th @Html.DisplayNameFor(model => model.NgayDatHang)> Ngày đặt hàng </th>
                <th @Html.DisplayNameFor(model => model.TinhTrang)> Tình trạng </th>
                <th width="5%">Sửa</th>
                <th width="5%">Xóa</th>
            </tr>
        </thead>
        <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.NguoiDung.HoVaTen)</td>
                    <td>@Html.DisplayFor(modelItem => item.DienThoaiGiaoHang)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChiGiaoHang)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayDatHang)</td>
                    <td>@Html.DisplayFor(modelItem => item.TinhTrang.MoTa)</td>
                    <td class="text-center"><a asp-action="Edit" asp-route-id="@item.ID"><i class="fa-light fa-pen-to-square"></a></td>
                    <td class="text-center"><a asp-action="Delete" asp-route-id="@item.ID"><i class="fa-light fa-trash-can text-danger"></a></td>
                </tr>
                    stt++;
                }
        </tbody>
    </table>
</div>
</div>