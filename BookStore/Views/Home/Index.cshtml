@foreach (var item in Model)
{
	<section class="container pt-3 pb-5">
		<div class="d-flex flex-wrap justify-content-between align-items-center pt-1 border-bottom pb-4 mb-4">
			<h2 class="h3 mb-0 pt-3 me-2">@item.TenTheLoai</h2>
			<div class="pt-3">
				@{
					SlugHelper slugTenLoai = new SlugHelper();
					string tenLoaiKhongDau = slugTenLoai.GenerateSlug(item.TenTheLoai);
				}
				<a class="btn btn-outline-accent btn-sm" asp-area="" asp-controller="Sach" asp-action="PhanLoai" asp-route-tenLoai="@tenLoaiKhongDau">
					Xem tất cả<i class="ci-arrow-right ms-1 me-n1"></i>
				</a>
			</div>
		</div>
		<div class="row pt-2 mx-n2">
			@foreach (var sanPham in item.Sach.Take(4))
			{
				<div class="col-lg-3 col-md-4 col-sm-6 px-2 mb-4">
					<div class="card product-card">
						@{

							string tenSanPhamKhongDau = sanPham.TenSach.GenerateSlug();
						}
						<a class="card-img-top d-block overflow-hidden" asp-area="" asp-controller="Sach" asp-action="ChiTiet" asp-route-tenSach="@tenSanPhamKhongDau">
							<img src="~/uploads/@sanPham.AnhBia" />
						</a>
						<div class="card-body py-2">
							<a class="product-meta d-block fs-xs pb-1" href="#">@sanPham.TheLoai.TenTheLoai</a>
							<h3 class="product-title fs-sm">
								<a asp-area="" asp-controller="Sach" asp-action="ChiTiet" asp-route-tenSach="@tenSanPhamKhongDau" asp-route-tenLoai="@tenLoaiKhongDau">@sanPham.TenSach</a>
							</h3>
							<div class="d-flex justify-content-between">
								<div class="product-price">
									<span class="text-accent">@string.Format("{0:N0}", sanPham.DonGia)<small>đ</small></span>
								</div>
								<div class="star-rating">
									<i class="star-rating-icon ci-star-filled active"></i>
									<i class="star-rating-icon ci-star-filled active"></i>
									<i class="star-rating-icon ci-star-filled active"></i>
									<i class="star-rating-icon ci-star-filled active"></i>
									<i class="star-rating-icon ci-star"></i>
								</div>
							</div>
						</div>
						<div class="card-body card-body-hidden">
							<a class="btn btn-primary btn-sm d-block w-100 mb-2" asp-area="" asp-controller="GioHang" asp-action="Them" asp-route-id="@sanPham.ID">
								<i class="ci-cart fs-sm me-1"></i>Thêm vào giỏ hàng
							</a>
						</div>
					</div>
					<hr class="d-sm-none">
				</div>
			}
		</div>
	</section>
}